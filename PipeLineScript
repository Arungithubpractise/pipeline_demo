pipeline {
    agent any

    environment {
        // Update this path if your .NET SDK is installed in a different location.
        DOTNET_EXE = 'C:\\Program Files\\dotnet\\dotnet.exe'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
        
        stage('Clean Workspace') {
            steps {
                bat '''
                if exist PageObjectModel (
                    rmdir /s /q PageObjectModel
                )
                '''
            }
        }
        
        stage('Restore Dependencies') {
            steps {
                // Print the DOTNET_EXE value for debugging purposes.
                bat 'echo DOTNET_EXE is "%DOTNET_EXE%"'
                // Restore dependencies using the full path to dotnet.exe.
                bat '"%DOTNET_EXE%" restore'
            }
        }
        
        stage('Build') {
            steps {
                bat '"%DOTNET_EXE%" build --configuration Release'
            }
        }
        
        stage('Test') {
            steps {
                bat '"%DOTNET_EXE%" test --logger "trx;LogFileName=test_results.trx"'
            }
            post {
                always {
                    archiveArtifacts artifacts: '**/test_results.trx', allowEmptyArchive: true
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}
